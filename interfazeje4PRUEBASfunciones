import tkinter
from tkinter import *
from tkinter import ttk

class producto:
    nombre = " "
    precio = 0

ventana = tkinter.Tk()
ventana.geometry("500x500")
ventana.title("Mi primera interfaz con TKinter")

#etiquetas y barra input nombre
etiNombre = tkinter.Label(ventana, text="Nombre: ")
etiNombre.pack(side=tkinter.TOP)
inNombre = tkinter.Entry(ventana)
inNombre.pack(side=tkinter.TOP)

#etiqueta y barra precio
etiPrecio = tkinter.Label(ventana, text="Precio: ")
etiPrecio.pack()
inPrecio = tkinter.Entry(ventana)
inPrecio.pack()

#Tabla
tabla = ttk.Treeview(ventana, height=10, columns=("#0"))

tabla.heading("#0", text="Producto")
tabla.heading("#1", text="Precio")
tabla.pack()

def accionBotonGuardar():
    p = producto
    p.nombre =inNombre.get()
    p.precio = inPrecio.get()
    tabla.insert("", END, text=p.nombre, values=(p.precio))
    tabla.pack()

def accionBotonEditar():
    print("En proceso")

def accionBorrar():
    print("Tmbn en proceso")

#Botones

botonGuardar = tkinter.Button(ventana, text="Guardar", width=500, height=2, command=accionBotonGuardar)
botonEditar = tkinter.Button(ventana, text="Editar", width=500, height=2, command=accionBotonEditar)
botonBorrar = tkinter.Button(ventana, text="Borrar", width=500, height=2, command=accionBorrar)
botonBorrar.pack(side=tkinter.BOTTOM)
botonEditar.pack(side=tkinter.BOTTOM)
botonGuardar.pack(side=tkinter.BOTTOM)

ventana.mainloop()
