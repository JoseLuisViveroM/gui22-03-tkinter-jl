import tkinter#importamos la libreria

ventana = tkinter.Tk()#CREAMOS LA VENTANA
ventana.geometry("900x600") #se instancian las dimensiones de la ventana

ventana.title("Mi Primera Ventana TKinter")#Es el titulo de la ventana
etiqueta = tkinter.Label(ventana, text="Mi primera etiqueta", bg="red")#bg sirve para el color del fondo,,, text será el contenido del label
etiqueta.pack(side=tkinter.TOP, fill=tkinter.BOTH, expand=True)#metemos la etiqueta en la ventana y le decimos que la ubique arriba.... FILL SIRVE PARA LLENAR YA SEA X O Y O AMBAS

cajaDeTexto = tkinter.Entry(ventana)
cajaDeTexto.pack()

def funcionPrueba():#Define el metodo que ejecutara el boton al ser orpimido
    textoIngresado =cajaDeTexto.get()
    etiqueta["text"] = textoIngresado#Actualiza el valor de las etiquetas en tiempo de ejecucion con el valos de la caja de texto

#se crea el boton
# se agrega a la ventana y se define el texto del boton
# padx y pady define el tamaño del boton
# command ayuda a definir las funciones del boton en este caso se llama a un metodo especifico
boton1 = tkinter.Button(ventana, text = "mi primer boton", padx = 40, pady = 40, command = funcionPrueba)
boton1.pack()

ventana.mainloop()
