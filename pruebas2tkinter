import tkinter#importamos la libreria

ventana = tkinter.Tk()#CREAMOS LA VENTANA
ventana.geometry("800x600") #se instancian las dimensiones de la ventana

ventana.title("Mi Segunda Ventana TKinter")#Es el titulo de la ventana

etiquetaNombre = tkinter.Label(ventana, text="Nombre: ")
etiquetaNombre.pack()
etiquetaPrecio = tkinter.Label(ventana, text="Precio: ")

boton1 = tkinter.Button(ventana, text="Boton1", width=10, height=5)#define el tamaño
boton1.grid(row=2, column=0)#Define la pocision del boton en la venta ROW ES LA FILA Y COLUMN LA COLUMNA

boton2 = tkinter.Button(ventana, text="Boton2", width=10, height=5)#define el tamaño
boton2.grid(row=2, column=1)#Define la pocision del boton en la venta

ventana.mainloop()
